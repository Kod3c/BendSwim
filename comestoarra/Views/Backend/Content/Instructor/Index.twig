                                                        </div>
                                                        <!-- /.modal-dialog -->
                                                    </div>
                                                    <!-- /.modal -->
                                                {% endif %}

                                            {% endfor %}
                                        {% endif %}
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->

                    </div>

                    {% if ( user.user_id != ID and ROLE == 7 ) %}
                        <!-- Add New Instructor Modal -->
                        <div class="modal fade" id="addInstructor" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <a class="close" data-dismiss="modal" aria-hidden="true">&times;</a>
                                        <h4 class="modal-title" id="myModalLabel"><i class="fa fa-users"></i> Add New Instructor</h4>
                                    </div>

                                    <form action="{{ urlFor( 'addInstructorAction' ) }}" method="post" role="form">

                                        <div class="modal-body">

                                            <div class="form-group">
                                                <label for="first_name">First Name</label>
                                                <input id="first_name" class="form-control" type="text" name="first_name" required>
                                            </div>

                                            <div class="form-group">
                                                <label for="last_name">Last Name</label>
                                                <input id="last_name" class="form-control" type="text" name="last_name" >
                                            </div>

                                            <div class="form-group">
                                                <label for="birthdate">Date of Birth</label>
                                                <input id="birthdate" class="form-control" type="text" name="birthdate" required>
                                            </div>


                                            <div class="form-group">
                                                <label for="cellphone">Cell Phone</label>
                                                <input id="cellphone" class="form-control" type="text" name="cellphone" required>
                                            </div>

                                            <div class="form-group">
                                                <label for="user_email">Email Address</label>
                                                <input id="user_email" class="form-control" type="text" name="user_email" required>
                                                <p class="help-block">Please provide an valid Email Address !</p>
                                            </div>

                                            <div class="form-group">
                                                <label for="gender">Gender</label>
                                                <select name="gender" id="gender" class="form-control">
                                                    <option value="2">Male</option>
                                                    <option value="1">Female</option>
                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label for="specialties">Specialties</label>
                                                <select name="specialties" id="specialties" class="form-control">
                                                <option value="Infants" {% if Instructor_PROFILE['specialties'] == 'Infants' %}selected{% endif %}>Infants</option>
                                                <option value="Toddlers" {% if Instructor_PROFILE['specialties'] == 'Toddlers' %}selected{% endif %}>Toddlers</option>
                                                <option value="Preschoolers" {% if Instructor_PROFILE['specialties'] == 'Preschoolers' %}selected{% endif %}>Preschoolers</option>
                                                <option value="Elementry" {% if Instructor_PROFILE['specialties'] == 'Elementry' %}selected{% endif %}>Elementry</option>
                                                <option value="Preteen" {% if Instructor_PROFILE['specialties'] == 'Preteen' %}selected{% endif %}>Preteen</option>
                                                <option value="Adult" {% if Instructor_PROFILE['specialties'] == 'Adult' %}selected{% endif %}>Adult</option>
                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label for="bio">Bio</label>
                                                <textarea name="bio" id="bio" class="form-control" placeholder="Bio" style="height: 120px;"></textarea>
                                            </div>

                                        </div>
                                        <div class="modal-footer">

                                            <a class="btn btn-danger" data-dismiss="modal">Cancel</a>
                                            <button type="submit" class="btn btn-success pull-left">Submit</button>

                                        </div>

                                        <input type="hidden" name="{{ CSRF_TOKEN_NAME }}" value="{{ CSRF_TOKEN_VALUE }}"/>

                                    </form>

                                </div>
