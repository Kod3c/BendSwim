                                    <a href="#" role="button" class="btn btn-default" data-toggle="modal" data-target="#addInstructor" rel="tooltip" data-placement="bottom" title="Insert New Instructor Data to Database !"><i class="fa fa-plus"></i> Add New Instructor</a>
                                </div>
                                <!-- /.panel-heading -->
                            {% endif %}
