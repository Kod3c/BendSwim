                                                    <td class="cbn-table-center" width="20%"><strong>#{{ NAME }} - {{ Instructor.birthdate|replace({'-': ''}) }} - DDS{{ Instructor.Instructor_id|e }}</strong></td>
                                                    <td class="cbn-table-center">
                                                        {% if Instructor.avatar %}
                                                        {% else %}
                                                        {% endif %}
                                                        <strong>
                                                            {% if Instructor.last_name %}{{ Instructor.last_name|e }}, {% endif %}{{ Instructor.first_name|e }}
                                                            {% if Instructor.specialties %}
                                                                <br>
                                                                <a class="label label-info">{{ Instructor.specialties|e }}</a>
                                                            {% endif %}
                                                        </strong>
                                                    </td>
                                                    <td class="cbn-table-center">
                                                        Email: {{ Instructor.user_email|e }}
                                                        <hr>
                                                        {% if Instructor.phone %}
                                                        {% else %}
                                                        {% endif %}
                                                        {% if Instructor.cellphone %}
                                                            Phone: {{ Instructor.cellphone|e }}
                                                        {% else %}
                                                            ---
                                                        {% endif %}
                                                    </td>
                                                    <td class="cbn-table-center" width="15%">

                                                        <a href="{{ urlFor( 'Instructors' ) }}{{ Instructor.Instructor_id|e }}" class="btn btn-primary" rel="tooltip" data-placement="top" title="View Instructor Profile"><i class="fa fa-search"></i></a>
                                                        {% if ( user.user_id != ID and ROLE == 7 ) %}
                                                            <a href="#" role="button" class="btn btn-info" data-toggle="modal" data-target="#timeTable{{ Instructor.Instructor_id|e }}" rel="tooltip" data-placement="top" title="Set Timetable"><i class="fa fa-calendar"></i></a>
                                                        {% endif %}
                                                        {% if ( user.user_id != ID and ROLE == 7 ) %}
                                                            {% if not Instructor.can_login %}
                                                             {% endif %}
                                                        {% endif %}

                                                    </td>
                                                </tr>

                                                {% if ( user.user_id != ID and ROLE == 7 ) %}
