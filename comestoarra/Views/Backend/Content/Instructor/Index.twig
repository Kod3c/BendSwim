                                <div class="dataTable_wrapper">
                                    <table class="table table-striped table-bordered table-hover" id="all-Instructor">
                                        <thead>
                                        <tr>
                                            <th class="cbn-table-center" width="20%">#ID</th>
                                            <th class="cbn-table-center">Instructor ( Specialties )</th>
                                            <th class="cbn-table-center">Contact Info</th>
                                            <th class="cbn-table-center" width="15%">Action</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% if ALL_Instructor|length > 0 %}
                                            {% for Instructor in ALL_Instructor %}
